{{#each allPosts as |post|}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">Posted by {{User.username}} on {{format_date post.dateCreated}}</h6>
        <p class="card-text">{{post.content}}</p>
    </div>
</div>
{{/each}}